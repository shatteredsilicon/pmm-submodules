#!/bin/bash

set -o errexit
set -o xtrace
umask 0000

. $(dirname $0)/vars

PACKAGES=("${packages[@]}")

usage () {
    cat <<EOF
Usage: $0 [OPTIONS] [PACKAGE]

    The following options may be given:
        --help) usage ;;

    The following packages may be given:
        ${packages[@]}

Example $0 ssm-client
EOF
        exit 1
}

shell_quote_string() {
  echo "$1" | sed -e 's,\([^a-zA-Z0-9/_.=-]\),\\\1,g'
}

build_rpms() {
	docker run --rm --privileged -v ${root_dir}:/home/builder/ssm-submodules --mount 'type=volume,src=ssm-build-cache,dst=/mnt/cache' --tmpfs '/tmp' --env RUNAS="$(id -u)" "${rpmbuild_docker_image}" sh -c "
    	/home/builder/ssm-submodules/build/bin/build-rpm ${1}
    "
}

main() {
    PACKAGE="${1}"

    mkdir -vp ${result_dir} ${docs_dir} ${logs_dir}
    if [[ -n "${WITHOUT_DOCKER}" ]] && [[ ${WITHOUT_DOCKER} -eq 1 ]]; then
            ${bin_dir}/build-rpm "${PACKAGE:-all}"
    else
#	find ${result_dir} ${docs_dir} ${logs_dir} -type d -exec chmod 777 \{\} \;
	echo "Buiding with image ${rpmbuild_docker_image}"
        build_rpms "${PACKAGE:-all}"
    fi
}

main $@
